    "import os\n",
    "from google import genai\n",
    "from google.genai import types\n",
    "from geopy.geocoders import Nominatim\n",
    "import requests\n",
    "from datetime import datetime\n",
    "\n",
    "# создать клиент\n",
    "client = genai.Client(api_key=os.getenv(\"GEMINI_API_KEY\",\"xxx\"))\n",
    "model_id = \"gemini-2.5-pro-preview-03-25\" # \"gemini-2.5-flash-preview-04-17\"\n",
    "\n",
    "# Функция для получения прогноза погоды для заданного местоположения и даты\n",
    "geolocator = Nominatim(user_agent=\"weather-app\")\n",
    "def get_weather_forecast(location:str, date:str) -> dict:\n",
    "    \"\"\"Получает прогноз погоды для заданного местоположения и даты.\n",
    "\n",
    "    Args:\n",
    "        location: Название города, например, Сан-Франциско.\n",
    "        date: Дата, на которую нужно получить прогноз погоды, в формате ГГГГ-ММ-ДД.\n",
    "\n",
    "    Returns:\n",
    "        Словарь, сопоставляющий почасовые временные метки с температурами для заданной даты,\n",
    "        или словарь с ключом \"error\", если местоположение не найдено или произошла ошибка API.\n",
    "    \"\"\"\n",
    "    print(f\"ВЫЗОВ API: get_weather_forecast(location={location}, date={date})")\n",
    "    location_data = geolocator.geocode(location)\n",
    "    if location_data:\n",
    "        try:\n",
    "            response = requests.get(f\"https://api.open-meteo.com/v1/forecast?latitude={location_data.latitude}&longitude={location_data.longitude}&hourly=temperature_2m&start_date={date}&end_date={date}\")\n",
    "            data = response.json()\n",
    "            # Проверьте, существуют ли ключи 'hourly', 'time' и 'temperature_2m' перед доступом к ним\n",
    "            if \"hourly\" in data and \"time\" in data[\"hourly\"] and \"temperature_2m\" in data[\"hourly\"]:\n",
    "                print(\"ОТВЕТ API: " + str({time: temp for time, temp in zip(data[\"hourly\"][\"time\"], data[\"hourly\"][\"temperature_2m\"])}), flush=True)\n",
    "                return {time: temp for time, temp in zip(data[\"hourly\"][\"time\"], data[\"hourly\"][\"temperature_2m\"])}\n",
    "            else:\n",
    "                return {\"error\": \"Неожиданный формат ответа от погодного API.\"}\n",
    "        except requests.exceptions.RequestException as e:\n",
    "            return {\"error\": f\"Ошибка запроса API: {str(e)}\"}\n",
    "        except KeyError:\n",
    "            return {\"error\": \"Получен неверный формат данных от погодного API.\"}\n",
    "        except Exception as e:\n",
    "            return {\"error\": f\"Произошла непредвиденная ошибка: {str(e)}\"}\n",
    "    else:\n",
    "        return {\"error\": \"Местоположение не найдено\"}\n",
    "\n",
    "\n",
    "# Фиктивная реализация Python для установки температуры термостата\n",
    "def set_thermostat_temperature(temperature: int) -> dict:\n",
    "    \"\"\"Устанавливает термостат на желаемую температуру.\n",
    "\n",
    "    Args:\n",
    "        temperature: Желаемая температура для установки термостата, в градусах Цельсия.\n",
    "\n",
    "    Returns:\n",
    "        Словарь, подтверждающий статус операции, например, {\"status\": \"success\"}.\n",
    "    \"\"\"\n",
    "    print(f\"ВЫЗОВ API: set_thermostat_temperature(temperature={temperature})")\n",
    "    # В реальном приложении это будет взаимодействовать с API термостата\n",
    "    print(\"ОТВЕТ API: " + str({\"status\": \"success\"}))\n",
    "    return {\"status\": \"success\"}"
   ]
